<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="endGame" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uq.deco2800.pyramidscheme.controllers.EndGameScreenController">
   <children>
      <ImageView fx:id="endGameScreen" fitHeight="600.0" fitWidth="900.0">
         <image>
            <Image url="@../gameImages/EndGameScreenVictory.png" />
         </image>
      </ImageView>
      <StackPane fx:id="notification" maxHeight="100.0" maxWidth="200.0" prefHeight="426.0" prefWidth="638.0" translateX="-340.0" translateY="-240.0" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="openCardPackButton" mnemonicParsing="false" prefHeight="10.0" prefWidth="150.0" text="Open Card Pack">
               <HBox.margin>
                  <Insets left="375.0" top="300.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" prefWidth="150.0" text="Back to Menu">
               <HBox.margin>
                  <Insets left="-150.0" top="325.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="cardPackLabel" text="You have won a card pack!" textFill="RED">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="-180.0" top="275.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>  
   </children>
</StackPane>
